                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Path=CellState.OccupationStatus}" Value="Clear" />
                                                <Condition Binding="{Binding Path=CellState.ClosestPlayer}" Value="You" />
                                            </MultiDataTrigger.Conditions>
