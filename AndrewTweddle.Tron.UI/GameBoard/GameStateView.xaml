                            <Border.Style>
                                <Style>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=CellState.Position.IsPole}" Value="True">
                                            <DataTrigger.Setters>
                                                <Setter Property="Border.Width" Value="825" />
                                            </DataTrigger.Setters>
                                        </DataTrigger>
